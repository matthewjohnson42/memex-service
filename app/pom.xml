<project>

  <!-- maven module configurations -->
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.github.matthewjohnson42</groupId>
    <artifactId>memex-parent</artifactId>
    <version>1.0.2</version>
  </parent>
  <artifactId>memex-app</artifactId>
  <version>1.0.2</version>
  <name>Memex Service App</name>

  <dependencies>
    <!-- includes spring-boot-starter-web and spring-data-mongodb -->
    <dependency>
      <groupId>com.github.matthewjohnson42</groupId>
      <artifactId>memex-spring-data</artifactId>
      <version>2.0.15</version>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-oauth2-resource-server</artifactId>
      <version>${spring.boot.version}</version>
    </dependency>
    <dependency>
      <groupId>org.bouncycastle</groupId>
      <artifactId>bcprov-jdk15on</artifactId>
      <!-- if the version is changed, it should also be changed in scripts/docker-build.sh,
      docker/Dockerfile, and scripts/entrypoint.sh -->
      <version>1.68</version>
    </dependency>
  </dependencies>


  <build>
    <plugins>
      <!-- plugin for including shaded dependencies in compiled jar -->
      <!-- also configures jar manifest and adds transformed spring dependency resources -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <dependencies>
          <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-maven-plugin</artifactId>
            <version>${spring.boot.version}</version>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>org.bouncycastle:bcprov-jdk15on</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <createDependencyReducedPom>false</createDependencyReducedPom>
              <finalName>memex-service-${project.version}</finalName>
              <!-- reference: https://stackoverflow.com/questions/33687492 -->
              <transformers>
                <transformer
                        implementation="org.springframework.boot.maven.PropertiesMergingResourceTransformer">
                  <resource>META-INF/spring.factories</resource>
                </transformer>
                <transformer
                        implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

 </project>

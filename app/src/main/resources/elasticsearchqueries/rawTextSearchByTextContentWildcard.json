{
  "from": %s,
  "size": %s,
  "query": {
    "bool": {
      "must": {
        "query_string": {
          "query": "%s",
          "default_field": "textContent"
        }
      },
      "filter": [
        {
          "range": {
            "createDateTime": {
              "gte": %s,
              "lte": %s
            }
          }
        },
        {
          "range": {
            "updateDateTime": {
              "gte": %s,
              "lte": %s
            }
          }
        }
      ]
    }
  },
  "sort": [
    {
      "createDateTime": {
        "order": "desc"
      }
    }
  ],
  "highlight": {
    "fields": {
      "textContent": {
        "number_of_fragments": 3,
        "fragment_size": 150,
        "highlight_query": {
          "bool": {
            "must": {
              "match": {
                "textContent": {
                  "query": "%s"
                }
              }
            }
          }
        },
        "pre_tags": [ "<b><i>" ],
        "post_tags": [ "</b></i>" ]
      }
    }
  }
}
